{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["ANTHROPIC_API_KEY", "OPENAI_API_KEY"],
  "tasks": {
    "dev": {
      "cache": false
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "typecheck": {}
  }
}